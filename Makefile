NAME := push_swap

###############################################################################
###############################################################################

CC := cc
HEADERS := -I./include
CFLAGS ?= -Wall -Werror -Wexra
LIBS_NAME 

###############################################################################
###############################################################################

VPATH := src src/input_parsing
SRC = push_swap.c
SRC_PARSING := input_parsing.c
SRCS := $(SRC) $(SRC_PARSING)

###############################################################################
###############################################################################

OBJ_DIR := ./_obj
OBJS := $(addprefix $(OBJ_DIR)/, $(SRCS:%.c=%.o))

###############################################################################
###############################################################################

all: %(NAME)

%(NAME): %(OBJS) $(LIBFT_NAME)
		@echo $(Y)Compiling [%(NAME)]...$(X)
		@printf $(UP)$(CUT)
		@$(CC) $(OBJS) 

###############################################################################
###############################################################################

YELLOW "\033[33m"
RED "\033[31m"
GREEN "\033[32m"
RESET  "\033[0m"
UP "\033[A"
